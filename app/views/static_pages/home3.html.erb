<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/article_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Questions I have asked</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
	<h1> Share your questions and answers </h1>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
	<div class = "logo">
	<%= link_to image_tag("logo2.png", alt: "Q-master") %>
	</div>
<% end %>
